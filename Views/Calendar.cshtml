@page
@{
    Layout = "_Layout";







    ViewData["Title"] = "Calendar";
}

@section Styles {
    <link rel="stylesheet" href="~/css/client/calendar.css" asp-append-version="true" />
}

<div id="book" class="py-2 col-12 d-flex flex-column align-items-center fade-in">
    <div id="calendar" class="marble-bg rounded p-3 mx-1 d-flex flex-column align-items-center">
        <div id="calendar-header" class="col-12 bg-white d-flex align-items-center">
            <div class="d-flex justify-content-evenly">
                <button id="prev" class="monthNavBtn ">&#8592;</button>
                <button id="next" class="monthNavBtn">&#8594;</button>
            </div>
            <h1 id="month-year" class="fw-light"></h1>
        </div>
        <div id="calendar-body" class="col-12 bg-white">
            <div id="calendar-weekdays" class="d-flex justify-content-between col-12">
                <div>Sun</div>
                <div>Mon</div>
                <div>Tue</div>
                <div>Wed</div>
                <div>Thu</div>
                <div>Fri</div>
                <div>Sat</div>
            </div>
            <div id="calendar-dates" class="d-flex flex-column col-12 border"></div>
        </div>
        <a id='freepik-link' class="col-12 text-end"
            href="https://www.freepik.com/icon/calendar_2278049#fromView=search&page=1&position=5&uuid=72e790d8-50af-4b34-8e7b-41fa57eda497">Icons
            by Freepik</a>
    </div>
    <div class="mx-3 my-5 d-flex flex-wrap justify-content-center">
        <img class="calendar-gallery-img" src="./assets/gallery5.jpg" alt="yoga-gallery4">
    </div>

    <div class="modal fade" id="serviceSelection" tabindex="-1" aria-labelledby="serviceSelectionLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content overflow-visible">
                <div id="modal-header" class="rounded-top p-1 text-center">
                    <h1 class="modal-title fs-3" id="serviceSelectionLabel"></h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"> </button>
                </div>
                <div id="modal-body" class="bg-gray d-flex flex-column align-items-center col-12 py-3"></div>
                <div id="modal-footer" class="bg-gray rounded-bottom d-flex justify-content-end">
                    <button type="button" class="btn btn-secondary m-1" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="module" src="~/js/client/calendar.js"></script>
}