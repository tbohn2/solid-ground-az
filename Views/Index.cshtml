@page
@{
    ViewData["Title"] = "Nicole Olsen - Home";
}

<div class="fade-in whiteBG d-flex flex-wrap justify-content-center align-items-center">
    <img id="main-page-nicole" src="~/assets/main-page-nicole.jpg" alt="group yoga">
    <img id="transition-img" class="col-12" src="~/assets/transition.png" alt="transition">
    <div id="welcome" class="text-purple bg-lav col-12 d-flex flex-column align-items-center mb-5">
        <div class="d-flex flex-column align-items-center col-8">
            <h1 class="text-purple">Welcome</h1>
            <p class="fs-5 col-8">Welcome to SolidGround! Unlike traditional fitness based programs that emphasize
                intense
                physical exertion, I invite you to make incremental changes
                that help you connect with you whole self.
                My approach is disigned to help you achieve long-term results while embracing your unique journey
                towards
                self-love and acceptance.
            </p>
            <p class="fs-5 col-8">Thank you for being here! Check out my calendar to find out when and where I teach!
            </p>
            <button class="view-calendar custom-btn fs-4">View Schedule</button>
        </div>
    </div>
    <div class="mt-5">
        <h2 class="text-purple text-center">PRIVATE SESSIONS AVAILABLE TO BOOK</h2>
        <div id="services" class="my-2 d-flex flex-wrap justify-content-evenly"></div>
    </div>
    <div class="d-flex justify-content-evenly bg-white py-3 my-3 col-8 rounded">
        <div class="d-flex flex-column col-5">
            <h2 class="text-center">ABOUT ME</h2>
            <p>
                I am a certified yoga instructor with over 10 years of experience in teaching yoga to students of all
                levels and backgrounds. I specialize in Vinyasa, Hatha, and Restorative yoga, and I am passionate about
                helping others discover the transformative power of yoga in their lives.
            </p>
        </div>
        <img id="portrait" src="~/assets/portrait.jpg" alt="nicole-portrait">
    </div>
</div>

@section Scripts {
    <script type="module" src="~/js/services.js"></script>
}
